@model IEnumerable<Capas>

@{
    ViewData["title"] = "Capa";
}

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="sublinhado">Capas</h1>
        
        <div>
            <a class="btn btn-dark mx-2" asp-action="Exportar" asp-controller="Capa"><i class="bi bi-file-earmark-plus mx-2"></i>Exportar planilha Excel</a>
            <a class="btn btn-dark mx-2" asp-action="Create" asp-controller="Capa"><i class="bi bi-file-earmark-plus mx-2"></i>Adicionar nova capa</a>
        </div>
        
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    <table id="capas" class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Marca</th>
                <th scope="col">Modelo</th>
                <th scope="col">Cor</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Data inserida</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach(var capas in Model)
                {
                    <tr>
                        <th scope="row">@capas.Marca</th>
                        <td>@capas.Modelo</td>
                        <td>@capas.Cor</td>
                        <td>@capas.Quantidade</td>
                        <td>@capas.DataAtual</td>
                        <td>
                            <a class="btn btn-warning mx-2" asp-action="Edit" asp-route-Id="@capas.Id" asp-controller="Capa"><i class="bi bi-pencil-square mx-2"></i>Editar</a>
                            <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-Id="@capas.Id" asp-controller="Capa"><i class="bi bi-trash mx-2"></i>Excluir</a>
                        </td>
                        
                    </tr>
                }
            }   
        </tbody>
    </table>
</div>