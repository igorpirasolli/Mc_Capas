@model Capas

@{
    ViewData["title"] = "Editar";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Editar registro de capas</h1>
    </div>

    <form method="post" asp-controller="Capa" asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label for="Marca" class="form-label text-light">Marca:</label>
            <input type="text" class="form-control text-light" asp-for="Marca" id="Marca" placeholder="Marca do caminhão?">
            <span class="text-danger" asp-validation-for="Marca"> </span>

        </div>

        <div class="mb-3">
            <label for="Modelo" class="form-label text-light">Modelo:</label>
            <input type="text" class="form-control text-light" asp-for="Modelo" id="Modelo" placeholder="Modelo do caminhão?">
            <span class="text-danger" asp-validation-for="Modelo"> </span>
        </div>

        <div class="mb-3">
            <label for="Cor" class="form-label text-light">cor:</label>
            <input type="text" class="form-control text-light" asp-for="Cor" id="Cor" placeholder="Cor da capa?">
            <span class="text-danger" asp-validation-for="Cor"> </span>
        </div>

        <div class="mb-3">
            <label for="quantidade" class="form-label text-light">Quantidade:</label>
            <input type="number" class="form-control text-light" asp-for="Quantidade" id="quantidade" placeholder="quantidade de capas?">
            <span class="text-danger" asp-validation-for="Quantidade"> </span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Editar</button>
            <a class="btn btn-primary w-50" asp-controller="Capa" asp-action="Index"><i class="bi bi-arrow-left mx-2"></i>Voltar</a>
        </div>
    </form>

    <div />



