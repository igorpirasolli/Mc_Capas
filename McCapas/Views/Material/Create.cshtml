@model Material

@{
    ViewData["title"] = "Adicionar";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Adicionar novo Material</h1>
    </div>

    <form method="post" asp-controller="Material" asp-action="Create">
        <div class="mb-3">
            <label for="TipoDoMaterial" class="form-label text-light">Material:</label>
            <input type="text" class="form-control text-light" asp-for="TipoDoMaterial" id="TipoDoMaterial" placeholder="Tipo Do Material?">
            <span class="text-danger" asp-validation-for="TipoDoMaterial"> </span>

        </div>

        <div class="mb-3">
            <label for="Cor" class="form-label text-light">cor:</label>
            <input type="text" class="form-control text-light" asp-for="Cor" id="Cor" placeholder="Cor do material?">
            <span class="text-danger" asp-validation-for="Cor"> </span>
        </div>

        <div class="mb-3">
            <label for="quantidade" class="form-label text-light">Quantidade:</label>
            <input type="number" class="form-control text-light" asp-for="Quantidade" id="quantidade" placeholder="quantidade de materiais?">
            <span class="text-danger" asp-validation-for="Quantidade"> </span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Adicionar</button>
            <a class="btn btn-warning w-50" asp-controller="Material" asp-action="Index"><i class="bi bi-arrow-left mx-2"></i>Voltar</a>
        </div>
    </form>

    <div />



