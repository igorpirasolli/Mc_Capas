@model Material

@{
    ViewData["title"] = "Excluir registro";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Excluir registro do material?</h1>
    </div>

    <form method="post" asp-controller="Material" asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <h2 class="text-light">Realmente deseja apagar esse registro?</h2>

        <div class="mb-3">
            <label for="Marca" class="form-label text-light">Material:</label>
            <input type="text" class="form-control" asp-for="TipoDoMaterial" id="Marca" placeholder="Marca do caminhão?" disabled>
            <span class="text-danger" asp-validation-for="TipoDoMaterial"></span>

        </div>

        <div class="mb-3">
            <label for="Cor" class="form-label text-light">cor:</label>
            <input type="text" class="form-control" asp-for="Cor" id="Cor" placeholder="Cor da capa?" disabled>
            <span class="text-danger" asp-validation-for="Cor"></span>
        </div>

        <div class="mb-3">
            <label for="quantidade" class="form-label text-light">Quantidade:</label>
            <input type="number" class="form-control" asp-for="Quantidade" id="quantidade" placeholder="quantidade de capas?" disabled>
            <span class="text-danger" asp-validation-for="Quantidade"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <a class="btn btn-warning w-50" asp-controller="Material" asp-action="Index"><i class="bi bi-arrow-left mx-2"></i>Voltar</a>
        </div>
    </form>

    <div />
